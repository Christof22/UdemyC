{ 
    "version": "2.0.0", 
    "tasks": [
        // Single Build Tasks
        {
            "label": "C: Debug (Single File)",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "build_single",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "FILE_NAME=${file}",
                "COMPILATION_MODE=Debug", 
                "C_COMPILER=${config:compilerC}",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C: Release (Single File)",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "build_single",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "FILE_NAME=${file}",
                "COMPILATION_MODE=Release", 
                "C_COMPILER=${config:compilerC}",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        // Execution Tasks
        {
            "label": "Execute: Debug Program",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "execute",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Execute: Release Program",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "execute",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}